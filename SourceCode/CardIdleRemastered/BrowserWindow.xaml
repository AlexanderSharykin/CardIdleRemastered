        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:CardIdleRemastered.Properties"
        Title="{x:Static res:Resources.SteamLogin}" Height="Auto" Width="Auto" Loaded="Window_Loaded" Closing="Window_Closing" >
    <Grid>
        <WebBrowser Name="wbAuth"  
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Navigated="wbAuth_Navigated" Navigating="wbAuth_Navigating"
                    />

    </Grid>
</Window>
